  <%= form_with model: @post, local:true do |f| %>
 <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>宿泊代金</h4>
  <%= f.text_field :lodging_fee %>
  <h4>所在地</h4>
  <%= f.text_field :location %>
  <h4>部屋の種類</h4>
  <%= f.text_field :room_type %>
  <h4>感想</h4>
  <%= f.text_area :thoughts %>
    <div class="row mt-4">
      <div class="form-inline mx-auto">
        <% if @post.is_opened == false %>
          <%= f.submit "下書きを公開", :name => 'publicize_draft', class:'mr-5 btn btn-sm btn-warning' %>
          <%= f.submit "下書きを更新", :name => 'update_draft', class:'mr-5 btn btn-sm btn-outline-secondary' %>
        <% else %>
          <%= f.submit "下書きを更新", :name => 'update_post', class:'btn btn-sm btn-warning text-light' %>
        <% end %>
      </div>
    </div>
    <div class="mt-4 pb-3 text-center">
      <u><%= link_to "削除", "/posts/#{@post.id}", method: :delete, data: {confirm: "削除しますか？"}, class:'text-danger' %></u>
    </div>
  <% end %>