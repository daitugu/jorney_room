<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h6 class="text-dark bg-light p-4 mb-0">下書き投稿フォーム</h6>
        <div class="col-8 mt-2 mx-auto">
            <%= form_with url: post_path(@post.id), method: :patch, local:true do |f| %>
            <%= f.file_field :image, accept: "image/*" %>
          <h6>宿泊代金<h6>
            <%= f.text_field :lodging_fee,value: @post.lodging_fee %>
          <h6>所在地<h6>
            <%= f.text_field :location,value: @post.location %>
          <h6>部屋の種類<h6>
            <%= f.text_field :room_type,value: @post.room_type %>
          <h6>感想<h6>
            <%= f.text_area :thoughts,value: @post.thoughts %>
            <%= f.label :name, "タグ(半角スペースで複数個登録できます)" %>
            <%= f.text_field :name,value: @post.tags.pluck("tags.name") %>
          <div class="row mt-4">
          <div class="form-inline mx-auto">
              <% if @post.is_opened == false %>
              <%= f.submit "下書きを投稿", :name => 'publicize_draft', class:'mr-5 btn btn-sm btn-warning' %>
              <%= f.submit "下書きを更新", :name => 'update_draft', class:'mr-5 btn btn-sm btn-outline-secondary' %>
               <% else %>
              <%= f.submit "下書きを更新", :name => 'update_post', class:'btn btn-sm btn-warning text-light' %>
               <% end %>
          </div>
        </div>
          <% end %>
      </div>
    </div>
   </div>
</div>