<% if @range == "User" %>
  <% if @users.blank? %>
      None...
  <% else %>
    <table class="table table-hover table-inverse">
      <h5 class >ユーザー一覧 (全<%= @users.count %>件)</h5>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% else %>
  <% if @posts.blank? %>
    None...
  <% else %>
<div class="col-md-6 offset-md-3">
    <h5 class >投稿一覧 (全<%= @posts.count %>件)</h5>
 <div class="row">
    <% @posts.each do |post| %>
  <div class="card mb-4 shadow-sm">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_image, size: "200x200", loading: "lazy" %>
        <% end %>
      </div>
      <% end %>
        <%= paginate @posts %>
      <% end %>
    <% end %>
  </div>
</div>

