<div class="container">
<h5>メンバー情報編集</h5>

<%= form_with model: @user  do |f| %>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
  <h4>ニックネーム</h4> <%= f.text_field :name %>
  <h4>メールアドレス</h4>  <%= f.text_field :email%><br>
  <div class="field">
     <strong><%= f.label :パスワード %></strong>
    <% if @minimum_password_length %>
    <strong>(<%= @minimum_password_length %> 文字以上)</strong>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <strong><%= f.label :"パスワード(確認用)" %></strong><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>




  <%= f.submit '編集内容を保存' , class: "btn btn-success" %>
  <% end %>
<%= link_to "退会する" ,withdraw_path(current_user) , class: "btn btn-danger"%>