<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h6 class="text-dark bg-light p-4 mb-0">メンバー情報編集</h6>
      <div class="form-body p-3">
        <%= form_with model: @user  do |f| %>
        <label for="inputImage">プロフィール画像</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        <h6>ニックネーム</h6> <%= f.text_field :name %>
        <h6>メールアドレス</h6>  <%= f.text_field :email%>
        <%= f.submit '編集内容を保存' , class: "btn btn-success" %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
