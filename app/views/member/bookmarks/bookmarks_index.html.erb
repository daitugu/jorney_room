<div class="col-md-6 offset-md-3">
      <h5 class >投稿一覧 (全<%= @bookmarks.count %>件)</h5>
 <div class="row">

        <% if @bookmarks.length != 0 %>
        <% @bookmarks.each do |bookmark| %>
        <% post = bookmark.post %>
  <div class="card mb-4 shadow-sm">
 <%= link_to post_path(post.id)   do %>
  <%= image_tag post.get_image, size: "200x200" %>
 <% end %>
     <div class="card-body">
      <div class="btn-group">
         <td><%= post.lodging_fee %>¥</td><br>
           <%= link_to posts_path(user_id:post.user_id)do %>
          <td><%= image_tag post.user.get_profile_image, size: "100x100" %></td><br>
          <%=  post.user.name  %><br>
       <% end %>
      </div>
 </div>
  </div>
  <% end %>
</div>
<% end %>
 <% if @bookmarks.length <= 0 %>  
            <div class="text-center">
              お気に入りはまだ登録されていません。
            </div>
 <% end %>      
    </div>




   
<%= paginate @bookmarks %>

