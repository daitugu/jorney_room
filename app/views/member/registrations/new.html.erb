<div class="container">
  <h5 class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">メンバー登録</h5>
<div class="row">
  
<div class="col-sm-12 col-md-8 col-lg-3   mx-auto">
<%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field"> 
    <div class="form-inline">
<div class="field">
   <strong><%= f.label :"ハンドルネーム" %></strong><br>
  <%= f.text_field :name , autocomplete: "name"%>
</div>
 <div class="field">
     <strong><%= f.label :メールアドレス %></strong><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , :placeholder =>"sample@exsample.com"%>
  </div>

  <div class="field">
     <strong><%= f.label :パスワード %></strong>
    <% if @minimum_password_length %>
    <strong>(<%= @minimum_password_length %> 文字以上)</strong>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <strong><%= f.label :"パスワード(確認用)" %></strong><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>
<h6>既に登録済みの方</h6>
 <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください

