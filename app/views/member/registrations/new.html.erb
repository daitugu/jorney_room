<div class="container">
  <div class="row no-gutters">
    <div class="col-md-4 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
       <%= render "devise/shared/error_messages", resource: resource %>
      <h5 class="text-dark bg-light py-4 mb-0">メンバー登録</h5>
      <div class="form-body p-3">
        <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <strong><%= f.label :"ハンドルネーム" %></strong><br>
        <%= f.text_field :name , autocomplete: "name"%>
      </div>
      <div class="field">
       <strong><%= f.label :メールアドレス %></strong><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , :placeholder =>"sample@exsample.com"%>
      </div>
      <div class="field">
       <strong><%= f.label :パスワード %></strong>
        <% if @minimum_password_length %>
       <strong>(<%= @minimum_password_length %> 文字以上)</strong>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="field">
        <strong><%= f.label :"パスワード(確認用)" %></strong><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
        <% end %>
      <h6>既に登録済みの方</h6>
        <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください
      </div>
    </div>
  </div>
</div>
