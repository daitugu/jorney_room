<div class="col-md-5 offset-md-3">
     <h5 class = "pb_log_in">会員一覧</h5>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
       <th>会員ID</th>
       <th>氏名</th>
       <th>メールアドレス</th>
       <th>ステータス</th>
       <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
        <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.name ,admin_draft_path(user.id) %></td>
      <td><%= user.email %></td>
      <td><% if user.is_deleted == true %>
      <p class = "text-success">有効</p>
      <%  else %>
      <p class ="text-secondary">退会</p>
      <% end %>
      </td>
         </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
    </tr>
  </tfoot>
</table>
</div>
<%= paginate @users %>